@model Web.Models.Business_Entities.CreateTrackerViewModel

<form id="registerForm" method="post" asp-action="Create" asp-controller="Tracking">

    <div class="modal-body">
        <div class="form-group">
            <label asp-for="Completed" class="required"></label>
            <input asp-for="Completed" class="form-control" />
            <span asp-validation-for="Completed" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Planned" class="required"></label>
            <input asp-for="Planned" class="form-control" />
            <span asp-validation-for="Planned" class="text-danger .planned-validation-error"></span>
        </div>

        <div class="form-check mt-3">
            <input asp-for="IsFlagged" class="form-check-input" type="checkbox">
            <label asp-for="IsFlagged">Flagged</label>
        </div>
    </div>

    <div class="modal-footer">
        @* data-bs-dismiss="modal" *@
        <button type="button" class="btn btn-secondary hideModal">Close</button>
        <button type="submit" class="btn btn-primary submit-form">Submit</button>
    </div>
</form>

